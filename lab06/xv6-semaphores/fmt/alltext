2761 void freerange(void *vstart, void *vend);
2762 extern char end[]; 
2763 
2764 struct run {
2765   struct run *next;
2766 };
2767 
2768 struct {
2769   struct spinlock lock;
2770   int use_lock;
2771   struct run *freelist;
2772 } kmem;
2773 
