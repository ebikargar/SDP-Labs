8481 .p2align 2                                
8482 gdt:
8483   SEG_NULLASM                             
8484   SEG_ASM(STA_X|STA_R, 0x0, 0xffffffff)   
8485   SEG_ASM(STA_W, 0x0, 0xffffffff)         
8486 
8487 gdtdesc:
8488   .word   (gdtdesc - gdt - 1)             
8489   .long   gdt                             
