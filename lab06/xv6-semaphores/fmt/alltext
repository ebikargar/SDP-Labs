2551 
2552 void
2553 sleep(void *chan, struct spinlock *lk)
2554 {
2555   if(proc == 0)
2556     panic("sleep");
2557 
2558   if(lk == 0)
2559     panic("sleep without lk");
2560 
2561   
2562   
2563   
2564   
2565   
2566   
2567   if(lk != &ptable.lock){  
2568     acquire(&ptable.lock);  
2569     release(lk);
2570   }
2571 
2572   
2573   proc->chan = chan;
2574   proc->state = SLEEPING;
2575   sched();
2576 
2577   
2578   proc->chan = 0;
2579 
2580   
2581   if(lk != &ptable.lock){  
2582     release(&ptable.lock);
2583     acquire(lk);
2584   }
2585 }
