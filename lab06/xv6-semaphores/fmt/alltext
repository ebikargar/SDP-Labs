4425 
4426 void
4427 readsb(int dev, struct superblock *sb)
4428 {
4429   struct buf *bp;
4430 
4431   bp = bread(dev, 1);
4432   memmove(sb, bp->data, sizeof(*sb));
4433   brelse(bp);
4434 }
