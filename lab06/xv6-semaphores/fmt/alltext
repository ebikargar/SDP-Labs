2706 
2707 .globl swtch
2708 swtch:
2709   movl 4(%esp), %eax
2710   movl 8(%esp), %edx
2711 
2712   
2713   pushl %ebp
2714   pushl %ebx
2715   pushl %esi
2716   pushl %edi
2717 
2718   
2719   movl %esp, (%eax)
2720   movl %edx, %esp
2721 
2722   
2723   popl %edi
2724   popl %esi
2725   popl %ebx
2726   popl %ebp
2727   ret
