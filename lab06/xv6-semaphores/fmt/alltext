4436 
4437 static void
4438 bzero(int dev, int bno)
4439 {
4440   struct buf *bp;
4441 
4442   bp = bread(dev, bno);
4443   memset(bp->data, 0, BSIZE);
4444   log_write(bp);
4445   brelse(bp);
4446 }
