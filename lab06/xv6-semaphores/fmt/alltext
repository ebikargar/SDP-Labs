1215 
1216 int
1217 main(void)
1218 {
1219   kinit1(end, P2V(4*1024*1024)); 
1220   kvmalloc();      
1221   mpinit();        
1222   lapicinit(mpbcpu());
1223   seginit();       
1224   cprintf("\ncpu%d: starting xv6\n\n", cpu->id);
1225   picinit();       
1226   ioapicinit();    
1227   consoleinit();   
1228   uartinit();      
1229   pinit();         
1230   tvinit();        
1231   binit();         
1232   fileinit();      
1233   iinit();         
1234   ideinit();       
1235   if(!ismp)
1236     timerinit();   
1237   startothers();   
1238   kinit2(P2V(4*1024*1024), P2V(PHYSTOP)); 
1239   userinit();      
1240   
1241   mpmain();
1242 }
1243 
