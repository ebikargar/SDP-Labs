5437 static int
5438 fdalloc(struct file *f)
5439 {
5440   int fd;
5441 
5442   for(fd = 0; fd < NOFILE; fd++){
5443     if(proc->ofile[fd] == 0){
5444       proc->ofile[fd] = f;
5445       return fd;
5446     }
5447   }
5448   return -1;
5449 }
5450 int
5451 sys_dup(void)
5452 {
5453   struct file *f;
5454   int fd;
5455 
5456   if(argfd(0, 0, &f) < 0)
5457     return -1;
5458   if((fd=fdalloc(f)) < 0)
5459     return -1;
5460   filedup(f);
5461   return fd;
5462 }
