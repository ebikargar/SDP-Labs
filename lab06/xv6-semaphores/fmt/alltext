8409 .code16                       
8410 .globl start
8411 start:
8412   cli                         
8413 
8414   
8415   xorw    %ax,%ax             
8416   movw    %ax,%ds             
8417   movw    %ax,%es             
8418   movw    %ax,%ss             
8419 
8420   
8421   
8422 seta20.1:
8423   inb     $0x64,%al               
8424   testb   $0x2,%al
8425   jnz     seta20.1
8426 
8427   movb    $0xd1,%al               
8428   outb    %al,$0x64
8429 
8430 seta20.2:
8431   inb     $0x64,%al               
8432   testb   $0x2,%al
8433   jnz     seta20.2
8434 
8435   movb    $0xdf,%al               
8436   outb    %al,$0x60
8437 
8438   
8439   
8440   
8441   lgdt    gdtdesc
8442   movl    %cr0, %eax
8443   orl     $CR0_PE, %eax
8444   movl    %eax, %cr0
8445 
8446 
8447 
8448 
8449 
8450   
8451   
8452   
8453   ljmp    $(SEG_KCODE<<3), $start32
8454 
8455 .code32  
8456 start32:
8457   
8458   movw    $(SEG_KDATA<<3), %ax    
8459   movw    %ax, %ds                
8460   movw    %ax, %es                
8461   movw    %ax, %ss                
8462   movw    $0, %ax                 
8463   movw    %ax, %fs                
8464   movw    %ax, %gs                
8465 
8466   
8467   movl    $start, %esp
8468   call    bootmain
8469 
8470   
8471   
8472   movw    $0x8a00, %ax            
8473   movw    %ax, %dx
8474   outw    %ax, %dx
8475   movw    $0x8ae0, %ax            
8476   outw    %ax, %dx
8477 spin:
8478   jmp     spin
8479 
