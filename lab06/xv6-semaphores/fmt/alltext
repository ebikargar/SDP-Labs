2455 
2456 
2457 void
2458 scheduler(void)
2459 {
2460   struct proc *p;
2461 
2462   for(;;){
2463     
2464     sti();
2465 
2466     
2467     acquire(&ptable.lock);
2468     for(p = ptable.proc; p < &ptable.proc[NPROC]; p++){
2469       if(p->state != RUNNABLE)
2470         continue;
2471 
2472       
2473       
2474       
2475       proc = p;
2476       switchuvm(p);
2477       p->state = RUNNING;
2478       swtch(&cpu->scheduler, proc->context);
2479       switchkvm();
2480 
2481       
2482       
2483       proc = 0;
2484     }
2485     release(&ptable.lock);
2486 
2487   }
2488 }
