7613 #define COM1    0x3f8
7614 
7615 static int uart;    
7616 
7617 void
7618 uartinit(void)
7619 {
7620   char *p;
7621 
7622   
7623   outb(COM1+2, 0);
7624 
7625   
7626   outb(COM1+3, 0x80);    
7627   outb(COM1+0, 115200/9600);
7628   outb(COM1+1, 0);
7629   outb(COM1+3, 0x03);    
7630   outb(COM1+4, 0);
7631   outb(COM1+1, 0x01);    
7632 
7633   
7634   if(inb(COM1+5) == 0xFF)
7635     return;
7636   uart = 1;
7637 
7638   
7639   
7640   inb(COM1+2);
7641   inb(COM1+0);
7642   picenable(IRQ_COM1);
7643   ioapicenable(IRQ_COM1, 0);
7644 
7645   
7646   for(p="xv6...\n"; *p; p++)
7647     uartputc(*p);
7648 }
7649 
7650 void
7651 uartputc(int c)
7652 {
7653   int i;
7654 
7655   if(!uart)
7656     return;
7657   for(i = 0; i < 128 && !(inb(COM1+5) & 0x20); i++)
7658     microdelay(10);
7659   outb(COM1+0, c);
7660 }
7661 
7662 static int
7663 uartgetc(void)
7664 {
7665   if(!uart)
7666     return -1;
7667   if(!(inb(COM1+5) & 0x01))
7668     return -1;
7669   return inb(COM1+0);
7670 }
7671 
7672 void
7673 uartintr(void)
7674 {
7675   consoleintr(uartgetc);
7676 }
