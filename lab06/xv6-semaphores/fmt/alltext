5750 int
5751 sys_mkdir(void)
5752 {
5753   char *path;
5754   struct inode *ip;
5755 
5756   begin_trans();
5757   if(argstr(0, &path) < 0 || (ip = create(path, T_DIR, 0, 0)) == 0){
5758     commit_trans();
5759     return -1;
5760   }
5761   iunlockput(ip);
5762   commit_trans();
5763   return 0;
5764 }
