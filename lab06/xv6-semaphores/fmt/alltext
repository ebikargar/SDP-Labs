5766 int
5767 sys_mknod(void)
5768 {
5769   struct inode *ip;
5770   char *path;
5771   int len;
5772   int major, minor;
5773 
5774   begin_trans();
5775   if((len=argstr(0, &path)) < 0 ||
5776      argint(1, &major) < 0 ||
5777      argint(2, &minor) < 0 ||
5778      (ip = create(path, T_DEV, major, minor)) == 0){
5779     commit_trans();
5780     return -1;
5781   }
5782   iunlockput(ip);
5783   commit_trans();
5784   return 0;
5785 }
