6699 
6700 int
6701 cpunum(void)
6702 {
6703   
6704   
6705   
6706   
6707   
6708   if(readeflags()&FL_IF){
6709     static int n;
6710     if(n++ == 0)
6711       cprintf("cpu called from %x with interrupts enabled\n",
6712         __builtin_return_address(0));
6713   }
6714 
6715   if(lapic)
6716     return lapic[ID]>>24;
6717   return 0;
6718 }
