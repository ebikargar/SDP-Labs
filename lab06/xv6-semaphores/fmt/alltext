5418 static int
5419 argfd(int n, int *pfd, struct file **pf)
5420 {
5421   int fd;
5422   struct file *f;
5423 
5424   if(argint(n, &fd) < 0)
5425     return -1;
5426   if(fd < 0 || fd >= NOFILE || (f=proc->ofile[fd]) == 0)
5427     return -1;
5428   if(pfd)
5429     *pfd = fd;
5430   if(pf)
5431     *pf = f;
5432   return 0;
5433 }
