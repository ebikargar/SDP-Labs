7709   pushl $argv
7710   pushl $init
7711   pushl $0  
7712   movl $SYS_exec, %eax
7713   int $T_SYSCALL
7714 
7715 
7716 exit:
7717   movl $SYS_exit, %eax
7718   int $T_SYSCALL
7719   jmp exit
